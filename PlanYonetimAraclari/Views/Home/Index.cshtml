        // KVKK modalını göster
        function showKVKK(event) {
            event.preventDefault();

            // Modal açılmadan önce form değerlerini kaydet
            contactFormValues = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                subject: document.getElementById('subject').value,
                message: document.getElementById('message').value,
                acceptPrivacy: document.getElementById('AcceptPrivacy').checked
            };

            document.getElementById('kvkkModal').classList.remove('hidden');
        }

        // KVKK modalını kapat
        function closeKVKK(event) {
            event.preventDefault();
            document.getElementById('kvkkModal').classList.add('hidden');

            // Modal kapandıktan sonra form değerlerini geri yükle
            document.getElementById('name').value = contactFormValues.name || '';
            document.getElementById('email').value = contactFormValues.email || '';
            document.getElementById('subject').value = contactFormValues.subject || '';
            document.getElementById('message').value = contactFormValues.message || '';
            document.getElementById('AcceptPrivacy').checked = contactFormValues.acceptPrivacy || false;

            return false;
        }

        // Sayfa yüklendiğinde
        document.addEventListener('DOMContentLoaded', function() {
            // İletişim formu submit olduğunda
            const contactForm = document.querySelector('#contactForm');
            if (contactForm) {
                contactForm.addEventListener('submit', function(event) {
                    event.preventDefault(); // Sayfanın yenilenmesini engelle

                    // KVKK kutucuğu işaretlenmediyse formu engelle ve hatırlatma göster
                    if (!document.getElementById('AcceptPrivacy').checked) {
                        document.getElementById('errorMessage').classList.remove('hidden');
                        document.getElementById('errorText').innerText = 'KVKK şartlarını kabul etmelisiniz.';
                        document.getElementById('kvkkReminder').classList.remove('hidden');
                        setTimeout(function() {
                            document.getElementById('kvkkReminder').classList.add('translate-y-full');
                        }, 100);

                        // 5 saniye sonra otomatik kapat
                        setTimeout(function() {
                            closeKVKKReminder();
                        }, 5000);

                        // KVKK kutucuğunu vurgula
                        document.querySelector('label[for="AcceptPrivacy"]').classList.add('animate-pulse');
                        setTimeout(function() {
                            document.querySelector('label[for="AcceptPrivacy"]').classList.remove('animate-pulse');
                        }, 2000);

                        return false;
                    }

                    // Formu gönderme düğmesini devre dışı bırak ve yükleniyor durumunu göster
                    const submitButton = document.getElementById('submitButton');
                    const originalButtonText = submitButton.innerHTML;
                    submitButton.disabled = true;
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Gönderiliyor...';

                    // Form verilerini topla
                    const formData = new FormData(contactForm);

                    // AJAX isteği yap
                    fetch(contactForm.action, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Form gönderilemedi. Lütfen daha sonra tekrar deneyin.');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Formu sıfırla
                        contactForm.reset();

                        // Başarı mesajını göster
                        const successMessage = document.getElementById('successMessage');
                        successMessage.classList.remove('hidden');
                        successMessage.style.opacity = '1';
                        successMessage.style.transition = 'opacity 0.5s ease-in-out';
                        document.getElementById('errorMessage').classList.add('hidden');

                        // 5 saniye sonra başarı mesajını otomatik gizle
                        setTimeout(function() {
                            // Önce soluklaştır
                            successMessage.style.opacity = '0';

                            // Soluklaşma tamamlandıktan sonra tamamen gizle
                            setTimeout(function() {
                                successMessage.classList.add('hidden');
                                // Opacity'yi sıfırla ki bir sonraki gösterimde sorun olmasın
                                successMessage.style.opacity = '1';
                            }, 500);
                        }, 5000);

                        // Form alanlarını temizle
                        document.getElementById('name').value = '';
                        document.getElementById('email').value = '';
                        document.getElementById('subject').value = '';
                        document.getElementById('message').value = '';
                        document.getElementById('AcceptPrivacy').checked = false;

                        // Sayfa konumunu koru
                        document.getElementById('contact').scrollIntoView({ behavior: 'smooth' });
                    })
                    .catch(error => {
                        // Hata mesajını göster
                        const errorMessage = document.getElementById('errorMessage');
                        errorMessage.classList.remove('hidden');
                        errorMessage.style.opacity = '1';
                        errorMessage.style.transition = 'opacity 0.5s ease-in-out';
                        document.getElementById('errorText').innerText = error.message || 'Bir hata oluştu. Lütfen daha sonra tekrar deneyin.';
                        document.getElementById('successMessage').classList.add('hidden');

                        // 5 saniye sonra hata mesajını otomatik gizle
                        setTimeout(function() {
                            // Önce soluklaştır
                            errorMessage.style.opacity = '0';

                            // Soluklaşma tamamlandıktan sonra tamamen gizle
                            setTimeout(function() {
                                errorMessage.classList.add('hidden');
                                // Opacity'yi sıfırla ki bir sonraki gösterimde sorun olmasın
                                errorMessage.style.opacity = '1';
                            }, 500);
                        }, 5000);
                    })
                    .finally(() => {
                        // Düğme durumunu geri yükle
                        submitButton.disabled = false;
                        submitButton.innerHTML = originalButtonText;
                    });
                });
            }
        });

        // KVKK hatırlatma modalını kapat
        function closeKVKKReminder() {
            document.getElementById('kvkkReminder').classList.remove('translate-y-full');
            setTimeout(function() {
                document.getElementById('kvkkReminder').classList.add('hidden');
            }, 300);
        }
    </script>

